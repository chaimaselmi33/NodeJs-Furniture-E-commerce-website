<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./style/products.css">
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300&&family=Raleway:wght@600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0bc25bddb1.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <%- include ('header.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="intro-section">
            <div class="row">
                <div class="col-3">
                    <div class="d-flex mb-5 mt-80 ms-5">
                        <h1 class="blue-title-part ps-5"> Furni</h1>
                        <h1 class="white-title-part">ture</h1>
                    </div>

                    <div class="d-flex ms-5">
                        <h1 class="blue-title-part ps-5"> we al</h1>
                        <h1 class="white-title-part">l love</h1>
                    </div>

                </div>
                <div class="col-9 px-0 pb-5">
                    <img class="" src="./images/dark-orange-sofa.jpg" alt="interior-bg-image"
                        width="100%" />
                </div>
            </div>
        </div>

        <div class="my-5 pt-5 mx-auto w-75 d-flex justify-content-around prod-offer">
            <div class="text-center">
                <i class="fa fa-recycle fa-2x"></i>
                <div class="mt-3">
                    <p class="product-criteria">100% recycled materials</p>
                </div>
            </div>
            <div class="text-center">
                <i class="fa fa-envira fa-2x" aria-hidden="true"></i>
                <div class="mt-3">
                    <p class="product-criteria">Eco-friendly</p>
                </div>
            </div>
            <div class="text-center">
                <i class="fa fa-undo fa-2x" aria-hidden="true"></i>
                <div class="mt-3">
                    <p class="product-criteria">130 Days Return</p>
                </div>
            </div>
            <div class="text-center">
                <i class="fa fa-clock-o fa-2x" aria-hidden="true"></i>
                <div class="mt-3">
                    <p class="product-criteria">24/7 Support</p>
                </div>
            </div>
        </div>

        <div class="products-container py-5 px-5">
            <div class="row px-5">
                <% products.forEach( furniture=> { %>
                    <div class="col-3 " style="">
                        <div class="card" style="margin:10px">
                            <div class="card-img-top"><img src=" <%= furniture.furn_image %>  " alt="product-image"
                                    width="100%" height="100%" />
                            </div>
                            <div class="card-body ">
                                <div class="card-title">
                                    <%= furniture.furn_name %>
                                </div>
                                <div class="d-flex justify-content-between align-items-end">
                                    <div class="card-text my-2">
                                        <%= furniture.furn_price %> TND
                                            <!--<a href="/products/<= furniture.furn_id %> ">link</a>-->
                                    </div>

                                    <div>
                                        <span class="mx-2 card-icon"><a
                                                href="/products/<%= furniture.furn_id %> "><i
                                                    class="fas fa-eye"></i></a></span>
                                        <span class="mx-2 card-icon">
                                            <a href="#"><i class="fas fa-shopping-basket"></i></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <%- include ('footer.ejs') %>

</body>

</html>